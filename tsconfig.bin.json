{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "lib": ["es2019"],
    "outDir": "./bin",
    "rootDir": "./bin",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "allowJs": true
  },
  "include": ["bin/*.ts"],
  "exclude": ["node_modules", "dist", "src"]
}
